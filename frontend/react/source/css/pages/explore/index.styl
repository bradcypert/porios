.podcast-list
    font-size $font-size-2
    padding 1em

    .list-title
        font-size $font-size-3
        font-weight $font-weight-4
        margin-bottom .5em

    ul
        list-style none
        padding 0

        li
            display inline-block
            margin-right 15px
            overflow hidden
            position relative
            height 120px
            width 120px
            cursor pointer

            .podcast-background
                background-position center center
                background-repeat no-repeat
                background-size cover
                position absolute
                left 0
                top 0
                height 100%
                width 100%

            .podcast-title
                background rgba(#000, .5)
                box-shadow 0 -2px 10px rgba(#000, .5)
                color #fff
                bottom 0
                left 0
                padding .5em
                position absolute
                transform translateY(100%)
                transition .3s ease-in-out transform
                width 100%

            &:hover
                .podcast-title
                    transform translateY(0)